<!--about.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title">菜品管理</view>
    <view class="page__desc">Dishes management</view>
  </view>

  <view class="page__bd">
    <view class="weui-panel weui-panel_access">
      <!-- <view class="weui-panel__hd">图文组合列表</view> -->
      <view class="weui-panel__bd">
        <view class="weui-panel__ft" bindtap="toEdit">
          <view class="weui-cell weui-cell_access weui-cell_link">
            <view class="weui-cell__bd">添加菜品</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
        </view>

        <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{menus}}" wx:key="{{index}}"
          data-item="{{item}}" bindtap="toEdit">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{item.img ? item.img : '../../images/picture.png'}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{item.name}}</view>
            <view class="weui-media-box__desc price-line">价格: <text class="text-red">￥{{item.price}}</text></view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
      </view>

    </view>
  </view>

</view>